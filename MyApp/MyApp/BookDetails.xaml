<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.BookDetails">
    <ContentPage.Content>
        <StackLayout Spacing="20">
            <Label Text="ID Książki:" />
            <Label x:Name="lblId" />
            <Label x:Name="lblAuthor" />
            <Entry x:Name="entryTitle" />
            <Entry x:Name="entryCover" />
          
            <DatePicker x:Name="pubDate" />
            <Button Margin="30" Text="Update" Clicked="Update_Clicked" />
            <Button Margin="30" Text="Delete" Clicked="Delete_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>